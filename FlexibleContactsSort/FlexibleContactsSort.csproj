<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <AssemblyTitle>FlexibleContactsSort</AssemblyTitle>
    <AssemblyFileName>$(AssemblyTitle).dll</AssemblyFileName>
    <RootNamespace>FlexibleContactsSort</RootNamespace>
  </PropertyGroup>

  <Target Name="PackProject" AfterTargets="PostBuildEvent">
    <MSBuild Projects="$(MSBuildProjectFile)" Properties="NuPkgName=MonkeyLoader.Resonite.FlexibleContactSorting" Targets="PackNugetPkg">
    </MSBuild>
  </Target>

  <ItemGroup>
    <PackageReference Include="MonkeyLoader" Version="0.5.0-beta" />
    <PackageReference Include="MonkeyLoader.GamePacks.Resonite" Version="0.4.0-beta" />
    <PackageReference Include="PolySharp" Version="1.14.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Resonite.Elements.Core" Version="1.0.0" />
    <PackageReference Include="Resonite.FrooxEngine" Version="2024.3.1.1178" />
    <PackageReference Include="Resonite.SkyFrost.Base" Version="1.0.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.2" />
  </ItemGroup>
</Project>
